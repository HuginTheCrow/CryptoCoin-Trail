  <div class="grid">
    <div id="edit-profile">
        <h2>Personal info</h2>
        <fieldset>
          <form class="form-horizontal pull-left" role="form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
            <div class="form-group input-edit">
              <label class="col-lg-3 control-label"></label>
              <div class="col-lg-8">
                <%= f.input :first_name, required: true, html: { class: "form-control", placeholder: "Jane"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label"></label>
              <div class="col-lg-8">
                <%= f.input :last_name, required: true, html: { class: "form-control", placeholder: "Doe"}  %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label"></label>
              <div class="col-lg-8">
                <%= f.input :email, required: true, autofocus: true, html: { class: "form-control", placeholder: "janedoe@gmail.com"} %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">
               <%= f.input :phone_number, html: { class: "form-control"} %>
             </div>
           </div>

           <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
             <%= f.input :location, html: { class: "form-control"}  %>
           </div>
         </div>
         <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
         <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
